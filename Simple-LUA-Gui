-- Teleport to Player Section
local teleportLabel = Instance.new("TextLabel")
teleportLabel.Size = UDim2.new(1, 0, 0.1, 0)
teleportLabel.Text = "üöÄ Teleport to Player:"
teleportLabel.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
teleportLabel.Parent = scrollingFrame

local playerDropdown = Instance.new("TextBox")
playerDropdown.Size = UDim2.new(0.5, 0, 0.1, 0)
playerDropdown.PlaceholderText = "Select Player"
playerDropdown.Parent = scrollingFrame

local teleportButton = Instance.new("TextButton")
teleportButton.Size = UDim2.new(0.3, 0, 0.1, 0)
teleportButton.Text = "Teleport"
teleportButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
teleportButton.Parent = scrollingFrame

teleportButton.MouseButton1Click:Connect(function()
    local playerName = playerDropdown.Text
    local player = game.Players:FindFirstChild(playerName)
    if player and player.Character then
        game.Players.LocalPlayer.Character:MoveTo(player.Character.PrimaryPart.Position)
        showConfirmation("Teleported to " .. playerName)
    else
        showConfirmation("Player not found!")
    end
end)

-- Refresh Button for Player List
local refreshButton = Instance.new("TextButton")
refreshButton.Size = UDim2.new(0.3, 0, 0.1, 0)
refreshButton.Text = "Refresh Players"
refreshButton.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
refreshButton.Parent = scrollingFrame

refreshButton.MouseButton1Click:Connect(function()
    playerDropdown.Text = "" -- Clear the input field
    showConfirmation("Player list refreshed!")
end)

-- ESP Functionality
local espLabel = Instance.new("TextLabel")
espLabel.Size = UDim2.new(1, 0, 0.1, 0)
espLabel.Text = "üëÅÔ∏è ESP Toggle:"
espLabel.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
espLabel.Parent = scrollingFrame

local espToggleButton = Instance.new("TextButton")
espToggleButton.Size = UDim2.new(0.3, 0, 0.1, 0)
espToggleButton.Text = "Toggle ESP"
espToggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
espToggleButton.Parent = scrollingFrame

local espEnabled = false

espToggleButton.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled

    if espEnabled then
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer then
                local highlight = Instance.new("Highlight")
                highlight.Adornee = player.Character
                highlight.FillColor = Color3.fromRGB(255, 0, 0)

                local nameLabel = Instance.new("TextLabel")
                nameLabel.Size = UDim2.new(1, 0, 0.1, 0)
                nameLabel.Text = player.Name
                nameLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
                nameLabel.Parent = player.Character:WaitForChild("Head")

                highlight.Parent = player.Character
            end
        end
        showConfirmation("ESP Enabled")
    else
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer and player.Character:FindFirstChild("Highlight") then
                player.Character.Highlight:Destroy()
            end
        end
        showConfirmation("ESP Disabled")
    end
end)

-- Create Open/Close Forever Button
local foreverButton = Instance.new("TextButton")
foreverButton.Size = UDim2.new(0.1, 0, 0.1, 0)
foreverButton.Position = UDim2.new(0.9, 0, 0, 0)
foreverButton.Text = "Open/Close"
foreverButton.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
foreverButton.Parent = mainFrame

local isOpen = true
foreverButton.MouseButton1Click:Connect(function()
    isOpen = not isOpen
    mainFrame.Visible = isOpen
    foreverButton.Text = isOpen and "Close" or "Open"
end)

